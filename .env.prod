# Production Environment Configuration for Harbor Deployment System

# Application Environment
NODE_ENV=production
LOG_LEVEL=info

# Network Configuration
PORT=3002
HTTP_PORT=80
HTTPS_PORT=443
VITE_API_URL=http://harbor.roboetech.com

# Database Configuration
DB_HOST=harbor-postgres-prod
DB_PORT=5432
DB_NAME=harbor_prod
DB_USER=harbor_user
DB_PASSWORD=harbor_prod_secure_password_2024
DB_SSL=false

# PostgreSQL Container Configuration
POSTGRES_DB=harbor_prod
POSTGRES_USER=harbor_user
POSTGRES_PASSWORD=harbor_prod_secure_password_2024

# JWT Configuration
JWT_SECRET=harbor_production_jwt_secret_key_very_secure_32_chars_minimum_2024
JWT_REFRESH_SECRET=harbor_production_refresh_secret_key_very_secure_32_chars_minimum_2024
