# Production Environment Configuration
# Copy this file to .env.prod and fill in your production values

# Application Environment
NODE_ENV=production
LOG_LEVEL=info

# Network Configuration
HTTP_PORT=80
HTTPS_PORT=443
VITE_API_URL=https://your-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=harbor_prod
DB_USER=harbor_user
DB_PASSWORD=harbor_production_password_2024

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=harbor_production_jwt_secret_key_2024_very_secure_random_string
JWT_REFRESH_SECRET=harbor_production_refresh_secret_key_2024_very_secure_random
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# LDAP Configuration
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=yourcompany,dc=com
LDAP_BIND_CREDENTIALS=your_ldap_admin_password
LDAP_SEARCH_BASE=ou=users,dc=yourcompany,dc=com
LDAP_ORGANISATION=Your Company
LDAP_DOMAIN=yourcompany.com
LDAP_ADMIN_PASSWORD=your_ldap_admin_password
LDAP_CONFIG_PASSWORD=your_ldap_config_password
LDAP_READONLY_USER=readonly
LDAP_READONLY_PASSWORD=your_readonly_password
LDAP_PORT=389
LDAPS_PORT=636

# Redis Configuration
REDIS_PASSWORD=harbor_redis_password_2024

# Jenkins Webhook Configuration
JENKINS_WEBHOOK_SECRET=harbor_jenkins_webhook_secret_2024

# NAS Configuration
NAS_PATH=/nas
NAS_HOST_PATH=/path/to/your/nas/mount/point

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=notifications@yourcompany.com
SMTP_PASS=your_smtp_password
SMTP_FROM=Harbor Deployment System <notifications@yourcompany.com>

# Security Configuration
RATE_LIMIT_API=100
RATE_LIMIT_LOGIN=5
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Feature Flags
FEATURE_WEBSOCKET=true
FEATURE_NOTIFICATIONS=true
FEATURE_BACKUP=true
FEATURE_METRICS=true