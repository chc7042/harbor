# 프로덕션 환경변수 설정

# 데이터베이스 설정 (프로덕션)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=jenkins_nas_deployment_prod
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION

# JWT 설정 (프로덕션)
JWT_SECRET=CHANGE_THIS_TO_VERY_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_VERY_STRONG_REFRESH_SECRET_KEY
REFRESH_TOKEN_EXPIRES_IN=8h

# LDAP 설정 (프로덕션)
LDAP_URL=ldaps://your-production-ldap-server:636
LDAP_BIND_DN=cn=jenkins-nas-service,ou=services,dc=company,dc=com
LDAP_BIND_CREDENTIALS=CHANGE_THIS_LDAP_SERVICE_PASSWORD
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# 서버 설정 (프로덕션)
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-domain.com

# NAS 설정 (프로덕션)
NAS_MOUNT_PATH=/mnt/production-nas
NAS_SCAN_INTERVAL=300000

# Jenkins 설정 (프로덕션)
JENKINS_WEBHOOK_SECRET=CHANGE_THIS_JENKINS_WEBHOOK_SECRET
JENKINS_WEBHOOK_PATH=/webhook/jenkins

# 로그 설정 (프로덕션)
LOG_LEVEL=warn
LOG_FILE=/app/logs/app.log

# WebSocket 설정 (프로덕션)
WS_PORT=3001

# Redis 설정 (프로덕션)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# SSL 설정 (프로덕션)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 모니터링 설정
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics