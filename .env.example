# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jenkins_nas_deployment
DB_USER=postgres
DB_PASSWORD=password

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=8h

# LDAP 설정
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_CREDENTIALS=ldap-admin-password
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# 서버 설정
BACKEND_PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# NAS 설정
NAS_SCAN_INTERVAL=300000

# Jenkins 설정
JENKINS_WEBHOOK_SECRET=your-jenkins-webhook-secret
JENKINS_WEBHOOK_PATH=/webhook/jenkins

# 로그 설정
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket 설정
WS_PORT=3001